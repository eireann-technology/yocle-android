<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- The main content view -->
<!--    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"-->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/area"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
        android:orientation="vertical"
	>

        <!-- The ActionBar -->
        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lightgold"
            >

    <LinearLayout 
        android:id="@+id/area1"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >

	<android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_marginTop="0dp"
        android:layout_weight="1.0"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="wrap_content"/>
	</LinearLayout>

            <FrameLayout
                android:id="@+id/area2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

</RelativeLayout>


    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nvView"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        app:itemTextColor="#333"
        app:headerLayout="@layout/nav_header"

        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/mmm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <RelativeLayout
            android:id="@+id/logonedprofile"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/lightskyblue"
            android:padding="8dp" >

            <com.invest.yocle.RoundedImageView
                android:id="@+id/avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/pic6"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="62dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/avatar"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
<!--
                <Button
                    android:id="@+id/memberstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:layout_marginTop="6dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/menu_button_selector1"
                    android:text="@string/memberstatus"
                    android:textSize="13sp"
                    />
-->

            </LinearLayout>
        </RelativeLayout>


            <RelativeLayout
                android:id="@+id/nologonprofile"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/lightgold"
                android:padding="8dp" >

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:text="@string/memberarea"
                        android:textColor="@color/gold"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="1dp"
                        android:layout_gravity="left|top"
                        />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="@string/signup"
                        android:id="@+id/join"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:background="@drawable/menu_button_selector"
                        android:layout_marginTop="1dp"
                        android:layout_gravity="right|top"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/uu1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/signupnow"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_below="@+id/ll"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_gravity="left|top"
                    />
            </RelativeLayout>
        <ListView
            android:id="@+id/slider_list"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#F3F3F3"
            android:choiceMode="singleChoice"
            android:divider="@drawable/list_divider"
            android:dividerHeight="1dp"
            />

        </LinearLayout>

    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>

